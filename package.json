{
    "name": "stocks-monitor-backend",
    "version": "1.0.0",
    "description": "Backend app for stocks monitoring",
    "main": "index.js",
    "scripts": {
        "test": "cross-env NODE_ENV=test npm run migrate && jest --detectOpenHandles",
        "test:watch": "jest --watch",
        "configureMigrations": "node ./src/cli/configureMigrations.js",
        "cleanup": "node ./src/cli/cleanUp.js && npx sequelize-cli db:migrate:undo:all",
        "migrate": "npm run configureMigrations && sequelize-cli db:migrate",
        "exec": "node ./src/index.js",
        "devsrv": "cross-env NODE_ENV=development npm run migrate && nodemon --watch . ./src/index.js",
        "debug": "cross-env NODE_ENV=development npm run migrate && nodemon --inspect --watch . ./src/index.js",
        "server": "cross-env NODE_ENV=production npm run migrate && npm run exec"
    },
    "author": "Sergei Ogarkov",
    "private": true,
    "dependencies": {
        "axios": "^0.21.1",
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.19.0",
        "compression": "^1.7.4",
        "connect-session-sequelize": "^7.1.1",
        "cors": "^2.8.5",
        "cron": "^1.8.2",
        "cross-env": "^7.0.3",
        "dotenv-safe": "^8.2.0",
        "express": "^4.17.1",
        "express-session": "^1.17.1",
        "express-validation": "^3.0.8",
        "helmet": "^4.6.0",
        "http-status": "^1.5.0",
        "jest": "^27.0.3",
        "jsonwebtoken": "^8.5.1",
        "jwt-simple": "^0.5.6",
        "lodash": "^4.17.21",
        "morgan": "^1.10.0",
        "passport": "^0.4.1",
        "passport-http-bearer": "^1.0.1",
        "passport-jwt": "^4.0.0",
        "pg": "^8.6.0",
        "sequelize": "^6.6.2",
        "uuid": "^8.3.2",
        "winston": "^3.3.3",
        "winston-console-format": "^1.0.8"
    },
    "devDependencies": {
        "nodemon": "^2.0.7",
        "sequelize-cli": "^6.2.0",
        "sinon": "^11.1.1",
        "supertest": "^6.1.3"
    }
}
